<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:id="@+id/one"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/num_1"
            
            android:text="1"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_4"
            
            android:text="4"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_7"
            
            android:text="7"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_00"
            
            android:text="00"
            style="@style/num_btn"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/two"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/num_2"
            
            android:text="2"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_5"
            
            android:text="5"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_8"
            
            android:text="8"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_0"
            
            android:text="0"
            style="@style/num_btn"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/three"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/num_3"
            
            android:text="3"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_6"
            
            android:text="6"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_9"
            
            android:text="9"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_empty"
            
            android:text=""
            style="@style/num_btn"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/four"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/num_clear"
            
            android:text="清除"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_back"
            
            android:text="回退"
            style="@style/num_btn"
            />
        <Button
            android:id="@+id/num_affirm"
            
            android:layout_height="160dp"
            android:text="确认"
            style="@style/num_btn"
            />

    </LinearLayout>

</LinearLayout>
