<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tishi_msg_tv"
            style="@style/dialog_text"
            android:text="请输入储值卡密码"
            />
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/paywayTextColor"
            />
        <TextView
            android:id="@+id/moeny_number_tv"
            style="@style/dialog_text"
            android:text="￥10.00"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_input_et_1"
                style="@style/dialog_input_password_et"
                />
            <TextView
                android:id="@+id/dialog_input_et_2"
                style="@style/dialog_input_password_et"
                />
            <TextView
                android:id="@+id/dialog_input_et_3"
                style="@style/dialog_input_password_et"
                />
            <TextView
                android:id="@+id/dialog_input_et_4"
                style="@style/dialog_input_password_et"
                />
            <TextView
                android:id="@+id/dialog_input_et_5"
                style="@style/dialog_input_password_et"
                />
            <TextView
                android:id="@+id/dialog_input_et_6"
                style="@style/dialog_input_password_et"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num_1"
                android:text="1"
                style="@style/dialog_num_btn"
                />
            <Button
                android:id="@+id/num_2"
                android:text="2"
                style="@style/dialog_num_btn"
                />
            <Button
                android:id="@+id/num_3"
                android:text="3"
                style="@style/dialog_num_btn"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num_4"
                android:text="4"
                style="@style/dialog_num_btn"
                />
            <Button
                android:id="@+id/num_5"
                android:text="5"
                style="@style/dialog_num_btn"
                />
            <Button
                android:id="@+id/num_6"
                android:text="6"
                style="@style/dialog_num_btn"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num_7"
                android:text="7"
                style="@style/dialog_num_btn"
                />
            <Button
                android:id="@+id/num_8"
                android:text="8"
                style="@style/dialog_num_btn"
                />
            <Button
                android:id="@+id/num_9"
                android:text="9"
                style="@style/dialog_num_btn"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num_null"
                android:text=""
                style="@style/dialog_num_btn"
                android:background="@android:color/darker_gray"
                />
            <Button
                android:id="@+id/num_0"
                android:text="0"
                style="@style/dialog_num_btn"
                />
            <ImageView
                android:id="@+id/num_back"
                android:src="@drawable/num_back"
                android:background="@android:color/darker_gray"
                style="@style/dialog_num_btn"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
